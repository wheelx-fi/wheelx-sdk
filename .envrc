# direnv configuration for WheelX SDK development

# Use nix shell if shell.nix exists
if [[ -f shell.nix ]]; then
  use nix
fi

# Set Python path for development
export PYTHONPATH="$PWD/python/src:$PYTHONPATH"

# Optional: Set environment variables for development
export WHEELX_BASE_URL="https://wheelx.fi"
export WHEELX_DEBUG="true"

echo "WheelX SDK development environment loaded"